		"httpster": "^1.0.3",
		"jest": "^21.2.1",
		"rollup": "^0.52.1",
		"rollup-plugin-babel": "^3.0.2",
		"rollup-plugin-typescript2": "^0.8.4",
		"ts-jest": "^21.2.4",
		"typescript": "^2.6.2"
	},
	"babel": {
		"plugins": ["transform-flow-strip-types"],
		"presets": [
			[
				"env",
				{
					"target": {
						"browsers": ["last 2 versions"]
					},
					"modules": false
				}
			]
